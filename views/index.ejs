<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>My Book Tracker</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .top-bar {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            margin: 20px 0;
            flex-wrap: wrap;
        }
        
        .top-bar form {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .search-form input[type="text"],
        .sort-form select,
        .filter-form select {
            padding: 10px 15px;
            border: 1px solid #ccc;
            border-radius: 25px;
            font-size: 16px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            outline: none;
            transition: 0.3s;
        }
        
        .search-form button {
            padding: 10px 20px;
            background-color: #ffcc00;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-weight: bold;
            font-size: 16px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s;
        }
        
        .search-form button:hover {
            background-color: #e6b800;
        }
        
        .book-grid {
            display: grid;
            gap: 20px;
            padding: 20px;
            list-style: none;
            margin: 0;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            justify-content: center;
        }
        
        .book-card {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            min-height: 420px;
height: auto;

            perspective: 1000px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        /*.book-card {
            width: 100%;
            max-width: 100%;
            height: 420px;
            perspective: 1000px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        } */
        
        .book-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }
        
        .flip-area {
            width: 100%;
            height: 100%;
            position: relative;
        }
        
        .card-inner {
            width: 100%;
            height: 100%;
            transform-style: preserve-3d;
            transition: transform 0.8s ease;
            position: relative;
               display: flex;
    flex-direction: column;
    justify-content: space-between;
        }
        
        .card-inner.is-flipped {
            transform: rotateY(180deg);
        }
        
        .highlight {
            box-shadow: 0 0 20px 8px rgba(255, 235, 59, 0.7);
        }
        
        .card-front,
        .card-back {
            width: 100%;
            height: 100%;
               min-height: 420px;
            position: absolute;
            top: 0;
            left: 0;
            backface-visibility: hidden;
            background: #f9f9f9;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 10px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
           
        }
        
        .card-front img {
            height: 180px;
            margin-bottom: 10px;
            border-radius: 5px;
            transition: transform 0.5s ease;
        }
        
        .card-front img:hover {
            transform: scale(1.1);
        }
        
        .card-front strong {
            font-size: 18px;
            margin-bottom: 5px;
        }
        
        .card-back {
            transform: rotateY(180deg);
            padding-right: 50px;
            padding-left: 50px;
        }
        
        .card-back p {
            font-size: 18px;
            line-height: 1.8;
            text-align: justify;
            /* Justifies the text */
            margin-bottom: 1em;
            color: #333;
        }
        
        .card-back .actions {
             display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
    margin-top: 20px;
            margin-top: 10px;
        }
        
        .card-back a,
        .card-back button {
            margin: 0 5px;
             min-width: 120px;
        }
        
        .stars {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 5px;
        }
        
        .stars .star-icons {
            display: flex;
            gap: 2px;
            font-size: 22px;
            color: #FFD700;
        }
        
        .stars div {
            font-size: 14px;
            color: #333;
        }
        
        .date-info {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 14px;
            color: #333;
            margin-top: 5px;
        }
        
        .date-info i {
            color: #555;
            font-size: 16px;
        }
        
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin: 30px 0;
        }
        
        .pagination a {
            padding: 8px 12px;
            background: #f0f0f0;
            color: #333;
            border-radius: 8px;
            text-decoration: none;
            transition: background 0.3s;
        }
        
        .pagination a:hover {
            background: #ffcc00;
        }
        
        .pagination a.active {
            background: #ffcc00;
            font-weight: bold;
            color: #000;
        }
        
        .flash {
            padding: 12px 20px;
            margin: 20px auto;
            width: 80%;
            text-align: center;
            border-radius: 8px;
            font-weight: bold;
            font-size: 16px;
            animation: fadeOut 3s forwards;
        }
        
        .flash.success {
            background-color: #d4edda;
            color: #155724;
        }
        
        .flash.error {
            background-color: #f8d7da;
            color: #721c24;
        }
        
        @keyframes fadeOut {
            0% {
                opacity: 1;
            }
            80% {
                opacity: 1;
            }
            100% {
                opacity: 0;
                display: none;
            }
        }
        
        .card-back .actions a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
            padding: 12px 5px;
            background-color: #dedede;
            color: black;
            border-radius: 25px;
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
            min-width: 120px;
            margin-bottom: 10px;
        }
        
        .card-back .actions a:hover {
            background-color: #0056b3;
        }
        
        .card-back .actions button {
            padding: 12px 20px;
            background-color: #dedede;
            color: black;
            font-size: 16px;
            font-weight: bold;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
            min-width: 120px;
        }
        
        .card-back .actions button:hover {
            background-color: #c82333;
        }
        
        .review-preview {
            position: relative;
            display: -webkit-box;
            -webkit-line-clamp: 4;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            line-height: 1.6;
            max-height: 6.4em;
            padding-bottom: 2em;
                word-wrap: break-word;
    overflow-wrap: break-word;
            /* Enough space for Read More */
        }
        
        .review-preview::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 2em;
            background: linear-gradient(to bottom, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1));
            pointer-events: none;
            /* Let clicks pass through */
            z-index: 0;
        }
        
        .read-more {
            display: inline-block;
            margin-top: -1.2em;
            padding: 10px 20px;
            background-color: #ffcc00;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-weight: bold;
            font-size: 16px;
            text-decoration: none;
            color: black;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s;
        }
        
        .read-more:hover {
            background-color: #e6b800;
        }
    </style>
</head>

<body>
    <h1>📚 My Book Tracker</h1>
    <% if (messages.success && messages.success.length > 0) { %>
        <div class="flash success">
            <%= messages.success[0] %>
        </div>
        <% } %>
            <% if (messages.error && messages.error.length > 0) { %>
                <div class="flash error">
                    <%= messages.error[0] %>
                </div>
                <% } %>
                    <div class="top-bar">
                        <a href="/add" style="background-color: #28a745; color: black; padding: 10px 20px; border-radius: 25px; text-decoration: none; font-size: 16px; font-weight: bold; box-shadow: 0 2px 5px rgba(0,0,0,0.1); display: flex; align-items: center; gap: 5px;"> <i class="fa-solid fa-plus" style="color: #ffcc00; font-weight: 900; font-size: 20px;"></i> Add Book </a>
                        </a>
                        <form action="/search" method="GET" class="search-form">
                            <input type="text" name="q" placeholder="Search by title or author..." value="<%= searchTerm || '' %>">
                            <button type="submit">Search</button>
                        </form>
                        <form action="/" method="GET" class="sort-form">
                            <label for="sort">Sort by:</label>
                            <select name="sort" onchange="this.form.submit()">
                                <option value="date" <%=sortBy==='date' ? 'selected' : '' %>>Date Read</option>
                                <option value="rating" <%=sortBy==='rating' ? 'selected' : '' %>>Rating</option>
                                <option value="title" <%=sortBy==='title' ? 'selected' : '' %>>Title</option>
                            </select>
                        </form>
                        <form action="/" method="GET" class="filter-form">
                            <label for="filterRating">Filter Rating:</label>
                            <select name="filterRating" onchange="this.form.submit()">
                                <option value="">All</option>
                                <option value="8" <%=filterRating==8 ? 'selected' : '' %>>8 and above</option>
                                <option value="9" <%=filterRating==9 ? 'selected' : '' %>>9 and above</option>
                            </select>
                        </form>
                        <form action="/" method="GET" class="filter-form">
                            <label for="category">Filter by Category:</label>
                            <select name="category" onchange="this.form.submit()">
                                <option value="">All</option>
                                <option value="Fiction" <%=currentCategory==='Fiction' ? 'selected' : '' %>>Fiction</option>
                                <option value="Non-Fiction" <%=currentCategory==='Non-Fiction' ? 'selected' : '' %>>Non-Fiction</option>
                                <option value="Biography" <%=currentCategory==='Biography' ? 'selected' : '' %>>Biography</option>
                                <option value="Science" <%=currentCategory==='Science' ? 'selected' : '' %>>Science</option>
                                <option value="History" <%=currentCategory==='History' ? 'selected' : '' %>>History</option>
                                <option value="Fantasy" <%=currentCategory==='Fantasy' ? 'selected' : '' %>>Fantasy</option>
                                <option value="Mystery" <%=currentCategory==='Mystery' ? 'selected' : '' %>>Mystery</option>
                                <option value="Self-Help" <%=currentCategory==='Self-Help' ? 'selected' : '' %>>Self-Help</option>
                                <option value="Romance" <%=currentCategory==='Romance' ? 'selected' : '' %>>Romance</option>
                                <option value="Other" <%=currentCategory==='Other' ? 'selected' : '' %>>Other</option>
                            </select>
                        </form>
                    </div>
                    <ul class="book-grid">
                        <% books.forEach(function(book) { 
      var imageUrl = '/default-cover.jpg';
      if (book.cover_id) {
          if (book.cover_id.startsWith('/uploads/')) {
              imageUrl = book.cover_id;
          } else {
              imageUrl = 'https://covers.openlibrary.org/b/id/' + book.cover_id + '-M.jpg';
          }
      } 
      var dateString = new Date(book.date_read).toDateString();
      var isHighlighted = searchTerm && (book.title.toLowerCase().includes(searchTerm.toLowerCase()) || book.author.toLowerCase().includes(searchTerm.toLowerCase()));
    %>
                            <li class="book-card <%= isHighlighted ? 'highlight' : '' %>">
                                <div class="flip-area">
                                    <div class="card-inner">
                                        <div class="card-front"> <img src="<%= imageUrl %>" alt="Cover"> <strong><%= book.title %></strong> by
                                            <%= book.author %>
                                                <div><strong>Category:</strong>
                                                    <%= book.category || 'N/A' %>
                                                </div>
                                                <div class="stars">
                                                    <div class="star-icons">
                                                        <% const fullStars = Math.floor(book.rating / 2); const halfStar = (book.rating % 2) >= 1; const emptyStars = 5 - fullStars - (halfStar ? 1 : 0); %>
                                                            <% for (let i = 0; i < fullStars; i++) { %> <i class="fas fa-star"></i>
                                                                <% } %>
                                                                    <% if (halfStar) { %> <i class="fas fa-star-half-alt"></i>
                                                                        <% } %>
                                                                            <% for (let i = 0; i < emptyStars; i++) { %> <i class="far fa-star"></i>
                                                                                <% } %>
                                                    </div>
                                                    <div>
                                                        <%= book.rating %>/10</div>
                                                </div>📅
                                                <%= dateString %>
                                        </div>
                                        <div class="card-back">
                                            <p class="review-preview"> <strong>Review:</strong>
                                                <br>
                                                <%= (book.notes || '').length > 300 ? (book.notes || '').slice(0, 300) + '...' : (book.notes || '') %>

                                            </p>
                                            <% if (book.notes.length > 300) { %> <a href="/book/<%= book.id %>" class="read-more">Read More</a>
                                                <% } %>
                                                    <div class="actions"> <a href="/edit/<%= book.id %>">✏️ Edit</a>
                                                        <form action="/delete/<%= book.id %>" method="POST" onsubmit="return confirm('Are you sure?');" style="display:inline;">
                                                            <button type="submit">🗑️ Delete</button>
                                                        </form>
                                                    </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <% }); %>
                    </ul>
                    <div class="pagination">
                        <% if (currentPage > 1) { %>
                            <% if (searchTerm) { %> <a href="/search?q=<%= searchTerm %>&page=<%= currentPage - 1 %>&sort=<%= sortBy %>">Previous</a>
                                <% } else { %> <a href="/?page=<%= currentPage - 1 %>&sort=<%= sortBy %><%= filterRating ? '&filterRating=' + filterRating : '' %>">Previous</a>
                                    <% } %>
                                        <% } %>
                                            <% for (let i = 1; i <= totalPages; i++) { %>
                                                <% if (searchTerm) { %>
                                                    <a href="/search?q=<%= searchTerm %>&page=<%= i %>&sort=<%= sortBy %>" class="<%= currentPage === i ? 'active' : '' %>">
                                                        <%= i %>
                                                    </a>
                                                    <% } else { %>
                                                        <a href="/?page=<%= i %>&sort=<%= sortBy %><%= filterRating ? '&filterRating=' + filterRating : '' %>" class="<%= currentPage === i ? 'active' : '' %>">
                                                            <%= i %>
                                                        </a>
                                                        <% } %>
                                                            <% } %>
                                                                <% if (currentPage < totalPages) { %>
                                                                    <% if (searchTerm) { %> <a href="/search?q=<%= searchTerm %>&page=<%= currentPage + 1 %>&sort=<%= sortBy %>">Next</a>
                                                                        <% } else { %> <a href="/?page=<%= currentPage + 1 %>&sort=<%= sortBy %><%= filterRating ? '&filterRating=' + filterRating : '' %>">Next</a>
                                                                            <% } %>
                                                                                <% } %>
                    </div>
                    <script>
                        const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
                        if (isTouchDevice) {
                            document.querySelectorAll('.flip-area').forEach(area => {
                                area.addEventListener('click', function (e) {
                                    const inner = this.querySelector('.card-inner');
                                    inner.classList.toggle('is-flipped');
                                    const card = this.closest('.book-card');
                                    if (card && card.classList.contains('highlight')) {
                                        card.classList.remove('highlight');
                                    }
                                });
                            });
                        }
                        else {
                            document.querySelectorAll('.book-card').forEach(card => {
                                card.addEventListener('click', function () {
                                    if (this.classList.contains('highlight')) {
                                        this.classList.remove('highlight');
                                    }
                                });
                            });
                        }
                        document.addEventListener('click', function (e) {
                            if (!e.target.closest('.book-card')) {
                                document.querySelectorAll('.book-card.highlight').forEach(card => {
                                    card.classList.remove('highlight');
                                });
                            }
                        });
                    </script>
                    <%- include('partials/footer') %>
</body>

</html>